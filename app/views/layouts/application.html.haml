!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %title Bootstrap, from Twitter
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}

    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
    <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          -if user_signed_in?
            .btn-group.pull-right
              %button#logout-btn.btn.span2.dropdown-toggle{"data-toggle" => "dropdown",
                                          :href=>"#"}
                =image_tag "#{current_user.provider}.png", :class=>"mini-provider-logo"
                %span.username=current_user.name
                %span.caret.pull-right
              %ul.dropdown-menu
                %li=link_to "Logout",
                            destroy_user_session_path,
                            :confirm=>"Are you sure to logout?"
          -else
            .btn.btn-link.pull-right
              =link_to "login", new_user_session_path
          %a.btn.btn-navbar{:"data-toggle" => "collapse", :"data-target" => ".nav-collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "#"} Project name
          .nav-collapse
            %ul.nav
              %li.active
                %a{:href => "#"} Home
              %li
                %a{:href => "#about"} About
              %li
                %a{:href => "#contact"} Contact
    .container-fluid
      .row-fluid
        .span3.pull-right.offset1
          .well.sidebar-nav
            %ul.nav.nav-list
              -unless @last_posts.blank?
                %li.nav-header
                  Last Posts
                - @last_posts.each do |p|
                  %li{:class=> p.present?&&p == @post ? "active" : ''}
                    =link_to post_path(p), {title:p.title} do
                      = p.title.size>17 ? p.title[0..16]+?\u2026 : p.title
                      %span.muted.pull-right=time_ago_in_words(p.updated_at)
              -unless @last_users.blank?
                %li.nav-header
                  New users
                - @last_users.each do |u|
                  %li=link_to_if u.posts.present?, u.name, posts_path( :author => u)

        .span8
          - flash.each do |name, msg|
            = content_tag :div, :class => "alert #{name == :error ? "alert-error" : "alert-success" }" do
              %a.close{:href => "#", :"data-dismiss" => "alert"} Ã—
              = msg
          = yield
      %hr
      %footer
        %p &copy; Dmitriy Budnik 2012
